        "editorBracketHighlight.foreground1":"#d4d4d4",
        "editorBracketHighlight.foreground2":"#4da7bb",
        "editorBracketHighlight.foreground3":"#f7c627",
        "editorBracketHighlight.foreground4":"#93a957",
