// Place your settings in this file to overwrite the default settings
{
    /*-------- EDITOR SETTINGS --------*/
    // core vscode settings
    "terminal.integrated.allowChords": false,
    "terminal.external.windowsExec": "wt",
    "editor.autoClosingBrackets": "never",
    "editor.snippetSuggestions": "none",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.sideBar.location": "right",
    "editor.fontSize": 12,
    "window.menuBarVisibility": "toggle",
    "editor.cursorStyle": "block",
    "files.trimTrailingWhitespace": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": false
    },
    "editor.renderLineHighlight": "line",
    "update.mode": "none",
    "extensions.autoUpdate": false,
    "workbench.startupEditor": "none",
    "window.restoreWindows": "none",
    "extensions.ignoreRecommendations": true,
    "update.enableWindowsBackgroundUpdates": false,
    "editor.fontFamily": "Consolas",
    "editor.parameterHints.enabled": false,
    "breadcrumbs.enabled": true,
    "search.useIgnoreFiles": false,
    "editor.autoClosingQuotes": "never",
    "editor.find.seedSearchStringFromSelection": "never",
    "workbench.editor.closeOnFileDelete": true,
    "editor.renderWhitespace": "none",
    "diffEditor.renderSideBySide": true,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "remote.extensionKind": {
        "coenraads.bracket-pair-colorizer-2": "ui"
    },
    "editor.find.autoFindInSelection": "multiline",
    "git.enableSmartCommit": true,
    "explorer.confirmDragAndDrop": false,
    "http.proxyStrictSSL": false,
    "window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}${appName}",
    "github.gitAuthentication": false,
    "search.searchEditor.reusePriorSearchConfiguration": true,
    "editor.scrollbar.verticalScrollbarSize": 30,
    "git.ignoreLegacyWarning": true,
    "editor.rulers": [
        110
    ],
    "security.workspace.trust.enabled": false,
    "editor.bracketPairColorization.enabled": true,
    "workbench.layoutControl.enabled": false,
    "workbench.activityBar.visible": false,
    "window.commandCenter": true,
    "editor.guides.indentation": false,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?_",
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.minimap.enabled": false,
    "git.mergeEditor": true,
    "git.showActionButton": {
        "publish": false,
        "sync": false
    },
    "search.exclude": {
        "**/*.pyc": true
    },
    "diffEditor.diffAlgorithm": "advanced",
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.navigationScope": "editor",
    "git.closeDiffOnOperation": true,

    // terminal
    "terminal.integrated.defaultProfile.windows":"Command Prompt",
    "terminal.integrated.profiles.windows":{
        "Command Prompt": {
            "path": [
                "${env:windir}\\Sysnative\\cmd.exe",
                "${env:windir}\\System32\\cmd.exe"
            ],
            "args": [],
            "icon": "terminal-cmd"
        }
    },
    "terminal.integrated.defaultProfile.linux":"zsh",
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh"
        }
    },
    "terminal.integrated.wordSeparators": " ()[]{}',\"`─‘’_",




    /*-------- LANGUAGE SETTINGS --------*/
    // core vscode settings affecting code languages
    // ts/js
    "typescript.format.insertSpaceAfterCommaDelimiter": false,
    "typescript.format.insertSpaceAfterSemicolonInForStatements": false,
    "typescript.format.insertSpaceBeforeAndAfterBinaryOperators": false,
    "javascript.format.insertSpaceAfterKeywordsInControlFlowStatements": false,
    "javascript.format.insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "javascript.format.insertSpaceAfterCommaDelimiter": false,
    "typescript.format.insertSpaceAfterKeywordsInControlFlowStatements": false,
    "typescript.format.insertSpaceBeforeFunctionParenthesis": false,
    "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "javascript.format.insertSpaceAfterConstructor": false,
    "javascript.format.insertSpaceAfterSemicolonInForStatements": false,
    "javascript.format.insertSpaceBeforeAndAfterBinaryOperators": false,
    "javascript.format.insertSpaceBeforeFunctionParenthesis": false,
    "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
    "javascript.format.placeOpenBraceOnNewLineForFunctions": true,
    "javascript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "typescript.format.placeOpenBraceOnNewLineForFunctions": true,
    "typescript.format.placeOpenBraceOnNewLineForControlBlocks": true,
    "javascript.suggest.autoImports": false,
    "typescript.suggest.autoImports": false,
    "typescript.updateImportsOnFileMove.enabled": "never",
    // "javascript.format.enable": false,
    "[typescriptreact]":{
        "editor.tabSize": 2
    },
    "[html]": {
        "editor.tabSize": 2
    },
    "javascript.updateImportsOnFileMove.enabled": "never",

    // html
    "html.autoClosingTags": true,

    // python
    "python.disablePromptForFeatures": [
        "pylint"
    ],
    "python.linting.enabled": false,
    "python.linting.enabledWithoutWorkspace": false,
    "python.analysis.typeCheckingMode": "basic",
    "python.languageServer": "Pylance",
    "jupyter.askForKernelRestart": false,
    "[python]": {
        "editor.formatOnType": true
    },
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.autoImportUserSymbols": true,
    "python.analysis.autoImportCompletions": true,

    // css/less
    "css.lint.emptyRules": "ignore",
    "css.completion.completePropertyWithSemicolon": false,
    "less.completion.completePropertyWithSemicolon": false,
    "less.lint.emptyRules": "ignore",
    "python.formatting.provider": "black",

    // cmake
    "cmake.configureOnOpen": false,

    // rust
    "rust-analyzer.completion.addCallParenthesis": false,
    "rust-analyzer.completion.addCallArgumentSnippets": false,
    "rust-analyzer.inlayHints.enable": false,
    "rust-analyzer.completion.autoimport.enable": false,
    "rust-analyzer.lens.debug": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.renderColons": false,
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.imports.prefix": "crate",
    "rust-analyzer.lens.enable": false,

    // other files
    "files.associations": {
        "**/*.txt":"coffeescript"
    },
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },

    // svelte
    "[svelte]": {
        "editor.tabSize": 2
    },
    "svelte.plugin.svelte.rename.enable": false,
    "svelte.plugin.svelte.format.enable": false,
    "svelte.enable-ts-plugin": true,

    // csharp
    "csharp.referencesCodeLens.enabled": false,
    "csharp.testsCodeLens.enabled": false,
    "omnisharp.autoStart": false,
    "csharp.suppressDotnetInstallWarning": true,
    "omnisharp.useGlobalMono": "always",
    "omnisharp.path": "latest",

    // markdown
    "markdown.preview.scrollPreviewWithEditor": false,
    "markdown.preview.scrollEditorWithPreview": false,

    // java
    "redhat.telemetry.enabled": false,
    "java.format.enabled": false,
    "java.inlayHints.parameterNames.enabled": "none",

    // json
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },



    /*-------- EXTENSION SETTINGS --------*/
    // settings for extensions
    // minifier
    "minify.html": {
        "caseSensitive": true,
        "collapseBooleanAttributes": true,
        "collapseInlineTagWhitespace": true,
        "collapseWhitespace": true,
        "conservativeCollapse": false,
        "customAttrAssign": [],
        "customAttrCollapse": "",
        "customAttrSurround": [],
        "customEventAttributes": [
            "^on[a-z]{3,}$"
        ],
        "decodeEntities": false,
        "html5": true,
        "ignoreCustomComments": [
            "^!"
        ],
        "ignoreCustomFragments": [
            "<%[\\s\\S]*?%>",
            "<\\?[\\s\\S]*?\\?>"
        ],
        "includeAutoGeneratedTags": true,
        "keepClosingSlash": false,
        "maxLineLength": false,
        "minifyCSS": true,
        "minifyJS": true,
        "minifyURLs": false,
        "preserveLineBreaks": false,
        "preventAttributesEscaping": false,
        "processConditionalComments": false,
        "processScripts": [],
        "quoteCharacter": "\"",
        "removeAttributeQuotes": false,
        "removeComments": true,
        "removeEmptyAttributes": false,
        "removeEmptyElements": false,
        "removeOptionalTags": false,
        "removeRedundantAttributes": false,
        "removeScriptTypeAttributes": false,
        "removeStyleLinkTypeAttributes": false,
        "sortAttributes": false,
        "sortClassName": false,
        "trimCustomFragments": false,
        "useShortDoctype": false
    },

    "minify.css": {
        "advanced": true,
        "aggressiveMerging": true,
        "compatibility": "*",
        "inliner": {},
        "keepBreaks": false,
        "keepSpecialComments": "*",
        "mediaMerging": true,
        "processImport": true,
        "processImportFrom": [
            "all"
        ],
        "rebase": true,
        "restructuring": true,
        "root": "${workspaceRoot}",
        "roundingPrecision": 2,
        "semanticMerging": false,
        "shorthandCompacting": true
    },

    // material icon theme
    "material-icon-theme.hidesExplorerArrows": false,
    "material-icon-theme.files.associations": {
        "*.m":"matlab"
